unit Zinsrechner;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Menus, Vcl.StdCtrls, Vcl.ExtCtrls;

type
  TForm1 = class(TForm)
    Titel: TLabel;
    MainMenu1: TMainMenu;
    Datei: TMenuItem;
    Öffnen: TMenuItem;
    Speichern1: TMenuItem;
    Speichernals1: TMenuItem;
    ffnen1: TMenuItem;
    Neu1: TMenuItem;
    Kapital: TLabel;
    Zinssatz: TLabel;
    Laufzeit: TLabel;
    N1: TMenuItem;
    N2: TMenuItem;
    Schlieen1: TMenuItem;
    Eingabe_Kapital: TEdit;
    Zeichen_EUR: TLabel;
    Eingabe_Zinssatz: TEdit;
    Zeichen_Prozent: TLabel;
    EIngabe_Laufzeit: TEdit;
    Verzinsung: TLabel;
    Panel1: TPanel;
    Button_Einfach: TRadioButton;
    Buton_ZInseszins: TRadioButton;
    Panel2: TPanel;
    Button_Jahre: TRadioButton;
    Button_Monate: TRadioButton;
    Button_Berechnen: TButton;
    Anzeige_Berechnungen: TListBox;
    Button_Loeschen: TButton;
    procedure N2Click(Sender: TObject);
    procedure Button_BerechnenClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}


procedure TForm1.Button_BerechnenClick(Sender: TObject);
var
  Kapital,
  Zinssatz,
  Zeit,
  Ergebnis : Double;
begin
  Kapital  := StrToFloat(Eingabe_Kapital.Text);
  Zinssatz := StrToFloat(Eingabe_Zinssatz.Text);
  Zeit     := StrToFloat(Eingabe_Laufzeit.Text);

  if Button_Monate.Enabled then
    Zeit := Zeit / 12;

  if Button_Einfach.Enabled then
    Ergebnis := Kapital * Zinssatz * Zeit;

end;

procedure TForm1.N2Click(Sender: TObject);
begin
  Close;
end;

end.
